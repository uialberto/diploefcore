<Window x:Class="WpfApp.UpdateAndDelete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="UpdateAndDelete" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Código:</Label>
                <TextBox Name="txtCategoryId" Margin="10" Width="150"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Categoria:</Label>
                <TextBox Name="txtCategoryName" Margin="10" Width="150"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Name="btnUpdate" Content="Actualizar" Click="BtnUpdate_OnClick" Margin="10"></Button>
                <Button Name="btnEliminar" Content="Eliminar" Click="BtnEliminar_OnClick" Margin="10"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
